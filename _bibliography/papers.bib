  journal={Nations and Nationalism},
  volume={29},
  number={1},
  pages={311--330},
  year={2023},
  publisher={Wiley Online Library},
  abbr={NATIONS NATL},
  html={https://onlinelibrary.wiley.com/doi/10.1111/nana.12901},
  abstract={Previous research reported that “discriminatory” communalizing colonial policies increase the risk of postcolonial ethnic civil war. An analysis of newly collected group-level data on communal legislative representation shows that having been in a colony that had this institution greatly increased the risk of ethnic warfare, but whether an ethnic group was or was not a beneficiary of this policy within such a colony provides no information. I also test how colonial communal representation combines with postcolonial exclusion to predict ethnic warfare. I interpret the results with insights from strain theory.}
}

@article{van2022cutting,
  title={Cutting off the branch on which we are sitting? On postpositivism, value neutrality, and the “bias paradox”},
  author={van den Berg, Axel and Jeong, Tay},
  journal={Society},
  volume={59},
  number={6},
  pages={631--647},
  year={2022},
  publisher={Springer},
  abbr={SOCIETY},
  html={https://link.springer.com/article/10.1007/s12115-022-00750-8},
  abstract={We offer a comprehensive review of “postpositivist” theories that reject the pursuit of value neutrality in the social and natural sciences. We argue that none is successful, and all such theories covertly return to the “positivism” that they claim to reject. We attribute this intellectual failure to a widespread blindness to the fact that the “positivist” ideal of value neutrality embodies the very principles of egalitarianism and democracy that postpositivist critical theories commonly subscribe to.}
}

